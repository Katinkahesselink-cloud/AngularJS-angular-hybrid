{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "types": [
      "angular",
      "angular-route"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
